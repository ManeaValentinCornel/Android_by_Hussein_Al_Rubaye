<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tweet_user_imageUrl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/tweet_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="UserName"
            android:textColor="@color/Twitter"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tweet_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="20.20.2018"
            android:textSize="12sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:padding="2dp"
        android:id="@+id/tweet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lorem ipsum dolor sit amet, consectetur adipiscing elitlore magna aliqua"
        android:textColor="#000000"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tweet_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tweet_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_thumb_up_black_24dp" />


</androidx.appcompat.widget.LinearLayoutCompat>